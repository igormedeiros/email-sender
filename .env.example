# Environment mode: 'prod' or 'test'
ENVIRONMENT=test

# SMTP credentials
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_RETRY_ATTEMPTS=3
SMTP_RETRY_DELAY=5
SMTP_SEND_TIMEOUT=10

# Postgres credentials (canonical data source)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=
PGDATABASE=treineinsite

# JWT / API
JWT_SECRET_KEY=change_me_in_prod

# Secret source selection (env, dotenv, aws, azure, vault)
SECRET_SOURCE=env
DOTENV_PATH=.env
